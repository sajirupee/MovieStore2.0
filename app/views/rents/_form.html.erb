<%= form_for @rent, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :movie_id, :class => 'control-label' %>
    <div class="controls">
       <%= f.text_field :movie_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :member_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :member_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :borrowDate, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :borrowDate, :class => 'input-append date', :style => "height: 1000px" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rents_path, :class => 'btn' %>
  </div>
<% end %>
